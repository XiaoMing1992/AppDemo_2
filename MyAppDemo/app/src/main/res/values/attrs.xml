<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <attr name="colorValue" format="color" />
    <attr name="floatValue" format="float" />
    <attr name="integerValue" format="integer" />
    <attr name="booleanValue" format="boolean" />
    <attr name="dimensionValue" format="dimension" />
    <attr name="stringValue" format="string" />
    <attr name="referenceValue" format="reference" />


    <!--页面背景色，由于使用侧滑系统背景属性为透明，所以这里自定义一个属性-->
    <attr name="backgroundColor" format="color|reference"/>

    <!--悬浮按钮的颜色-->
    <attr name="fabColor" format="color|reference"/>

    <!--导航图标和文字状态颜色-->
    <attr name="navColor" format="reference|reference"/>

    <!--toolbar的主题-->
    <attr name="toolbarTheme" format="reference"/>

    <!--新闻频道管理的背景-->
    <attr name="itemChannelBackground" format="reference"/>

    <!--导航头像背景-->
    <attr name="navHeaderBackground" format="reference"/>

    <!--CheckedTextView选中状态的颜色-->
    <attr name="checkTextViewColorStateList" format="reference"/>

    <declare-styleable name="PacManRefreshHead">
        <attr name="pacIconColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="ThreePointLoadingView">
        <attr name="pointColor" format="color|reference"/>
    </declare-styleable>

</resources>