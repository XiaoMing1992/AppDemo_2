<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/row_left_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="关于我们" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/person_info"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/weixin" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="微信6.5.3"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/my_item_background"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_company"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="公司介绍"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_company"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/set_right_row" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@drawable/space_horitional" />

    <RelativeLayout
        android:id="@+id/news_dynamic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/my_item_background"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="新闻动态"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/set_right_row" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@drawable/space_horitional" />

    <RelativeLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/my_item_background"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/set_right_row" />

        <TextView
            android:id="@+id/title_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="联系方式"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@drawable/space_horitional" />

    <RelativeLayout
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/my_item_background"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_about"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="版本更新"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/new_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/update_circle_point"
            android:layout_toRightOf="@+id/title_update"
            android:gravity="center_vertical"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tip_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="6.5.4"
            android:visibility="gone"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/check_version"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/title_update"
            android:gravity="center_vertical"
            android:indeterminateDuration="700"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
