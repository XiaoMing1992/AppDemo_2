    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/row_left_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="历史"
            android:textSize="20sp" />
    </LinearLayout>
    <!--</RelativeLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <com.sevenheaven.segmentcontrol.SegmentControl
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segment_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:selectedColor="#32ADFF"
            app:normalColor="#FFFFFF"
            app:textColors="@drawable/text_color"
            app:backgroundColors="@drawable/background_color"
            app:cornerRadius="5dp"
            app:separatorWidth="2dp"
            app:boundWidth="4dp"
            app:texts="浏览历史|推送历史"
            app:verticalGap="10dp"
            app:horizonGap="10dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>

