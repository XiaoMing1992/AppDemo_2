<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/NavPage">
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center_vertical"
	    android:orientation="vertical" >

		<TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="target_scene"/>
		
		<RadioGroup
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <RadioButton android:id="@+id/target_scene_session"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:checked="true"
		        android:textColor="@color/gray"
		        android:text="target_scene_session"
		        android:onClick="onRadioButtonClicked"/>
		    <RadioButton android:id="@+id/target_scene_timeline"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:text="target_scene_timeline"
		        android:onClick="onRadioButtonClicked"/>
		    <RadioButton android:id="@+id/target_scene_favorite"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/gray"
		        android:text="target_scene_favorite"
		        android:onClick="onRadioButtonClicked"/>		    
		</RadioGroup>	    
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="send"/>
	    
	    <Button
	        android:id="@+id/send_text"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_text"/>
	    
	    <Button
	        android:id="@+id/send_img"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_img"/>
	    
	    <Button
	        android:id="@+id/send_music"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_music"/>
	    
	    <Button
	        android:id="@+id/send_video"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_video"/>
	    
	    <Button
	        android:id="@+id/send_webpage"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_webpage"/>
	    
	    <Button
	        android:id="@+id/send_appdata"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_appdata"/>
	    
	    <Button
	        android:id="@+id/send_emoji"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="send_emoji"/>
	        
	    <Button
	        android:id="@+id/get_token"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="get_token_from_weixin"/>
	    
	    <Button
	        android:id="@+id/unregister"
	        style="@style/MMLineActionButton"
	        android:layout_margin="10dp"
	        android:text="unregister_from_weixin"/>
	    
	</LinearLayout>
</ScrollView>