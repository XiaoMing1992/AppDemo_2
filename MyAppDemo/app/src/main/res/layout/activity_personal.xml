                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@drawable/space_horitional" />

               <RelativeLayout
                    android:id="@+id/my_push"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/my_item_background"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_push"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="昵称："
                        android:textSize="20sp" />
                </RelativeLayout>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@drawable/space_horitional" />

        <RelativeLayout
            android:id="@+id/modify_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:background="@drawable/my_item_background"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/title_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_phone"
                android:gravity="center_vertical"
                android:text="修改手机号"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"

                android:gravity="center_vertical"
                android:src="@drawable/set_right_row" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@drawable/space_horitional" />

        <RelativeLayout
            android:id="@+id/modify_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_item_background"
            android:clickable="true"
            android:padding="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/password" />

            <ImageView
                android:id="@+id/img_password_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:src="@drawable/set_right_row" />

            <TextView
                android:id="@+id/title_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_password"
                android:layout_toRightOf="@+id/img_password"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textSize="20sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@drawable/space_horitional" />

        <RelativeLayout
            android:id="@+id/modify_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/my_item_background"
            android:clickable="true"
            android:padding="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/title_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_email"
                android:gravity="center_vertical"
                android:text="修改邮件"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:src="@drawable/set_right_row" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/register_btn"
                android:text="@string/logout"
                android:textColor="@color/transparent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>